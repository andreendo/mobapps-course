<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.andreendo.mobappscourse.mylittlerandom"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IntervalActivity"
            android:label="@string/title_activity_interval" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.andreendo.mobappscourse.mylittlerandom.MainActivity" />
        </activity>
        <activity
            android:name=".ManualListActivity"
            android:label="@string/title_activity_manual_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.andreendo.mobappscourse.mylittlerandom.MainActivity" />
        </activity>
        <activity
            android:name=".TextFileActivity"
            android:label="@string/title_activity_text_file" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.andreendo.mobappscourse.mylittlerandom.MainActivity" />
        </activity>
        <activity
            android:name=".ManualListAddActivity"
            android:label="@string/title_activity_manual_list_add" >
        </activity>
    </application>

</manifest>
